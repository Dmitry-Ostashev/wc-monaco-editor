{
  "name": "@vanillawc/wc-monaco-editor",
  "version": "1.1.7",
  "license": "MIT",
  "author": "Evan Plaice <evanplaice@gmail.com> (http://evanplaice.com/)",
  "description": "A vanilla Monaco Editor web component",
  "keywords": [
    "web-components",
    "vanilla",
    "editor",
    "monaco"
  ],
  "repository": "https://github.com/vanillawc/wc-monaco-editor/",
  "main": "src/wc-monaco-editor.js",
  "module": "dist/wc-monaco-editor.js",
  "scripts": {
    "start": "npx live-server --open=dev",
    "lint": "semistandard",
    "build:src": "npx rollup --config .config/rollup.config.js ",
    "build:vendor": "npx webpack --config .config/webpack.config.js",
    "package": "npx rimraf package && npm pack | tail -n 1 | xargs tar -xf",
    "preversion": "npm run lint",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {},
  "devDependencies": {
    "css-loader": "^3.2.0",
    "monaco-editor": "^0.18.1",
    "semistandard": "^14.2.0",
    "style-loader": "^1.0.0"
  },
  "semistandard": {
    "ignore": [
      "demo/*",
      "dev/*",
      "dist/*",
      "vendor/*"
    ]
  }
}
